<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fdfdfe"
    android:orientation="vertical"
    android:gravity="center">

    <TextView android:text="@string/appIntro" android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:textColor="#010101"
        android:layout_weight="1"
        android:gravity="center|center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/singleplayerButton"
        android:id="@+id/singleplayerButton"
        android:width="200dp"
        android:height="100dp"
        android:onClick="toSingleplayer"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/goMultiplayer"
        android:id="@+id/multiplayerButton"
        android:height="100dp"
        android:width="200dp"
        android:onClick="toMultiplayer"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/goStatistics"
        android:id="@+id/statisticsButton"
        android:height="100dp"
        android:width="200dp"
        android:onClick="toStatistics"
        android:layout_weight="1" />

</LinearLayout>
