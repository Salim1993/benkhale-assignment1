<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.salim_000.benkhale_reflex.choosingPlayers"
    android:orientation="vertical">

    <TextView android:text="@string/pickNumberInstruction" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/player2Button"
        android:id="@+id/button3"
        android:onClick="create2Buttons"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/player3Button"
        android:id="@+id/button2"
        android:onClick="create3Buttons"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/player4Button"
        android:id="@+id/button4"
        android:onClick="create4Buttons"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>
